{
  "AppOptions": {
    "Name": "ApiGateway"
  },
  "LogOptions": {
    "Level": "information",
    "LogTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u4}] {Message:lj}{NewLine}{Exception}"
  },
  "Yarp": {
    "routes": {
      "identity": {
        "clusterId": "identity",
        "match": {
          "path": "identity/{**catch-all}"
        },
        "Transforms":  [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "api": {
        "clusterId": "api",
        "match": {
          "path": "api/{**catch-all}"
        },
        "Transforms":  [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "clusters": {
      "identity": {
        "destinations": {
          "destination1": {
            "address": "https://localhost:7016"
          }
        }
      },
      "api": {
        "destinations": {
          "destination1": {
            "address": "https://localhost:7257"
          }
        }
      }
    }
  }
}
