{
  "App": "Identity-Service",
  "PostgresOptions": {
    "ConnectionString": "Server=postgres;Port=5432;Database=identity;User Id=postgres;Password=postgres;Include Error Detail=true"
  },
  "AuthOptions": {
    "IssuerUri": "https://identity:443"
  },
  "Jwt": {
    "Authority": "https://identity:443",
    "Audience": "identity-api",
    "RequireHttpsMetadata": false,
    "MetadataAddress": "https://identity:443/.well-known/openid-configuration"
  },
  "LogOptions": {
    "Level": "information",
    "LogTemplate": "{Timestamp:HH:mm:ss} [{Level:u4}] {Message:lj}{NewLine}{Exception}"
  },
  "AllowedHosts": "*"
}
